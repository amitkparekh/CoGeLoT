	"version": "0.2.0",
	"configurations": [
		{
			"name": "Current file",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": false,
			"subProcess": true,
			"env": {
				"PYTHONPATH": "${workspaceFolder}"
			}
		},
		{
			"name": "Debug Run",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/src/cogelot/train.py",
			"console": "integratedTerminal",
			"justMyCode": false,
			"subProcess": true,
			"args": [
				"debug=default"
			]
		},
		{
			"name": "Debug Tests",
			"type": "python",
			"request": "launch",
			"justMyCode": false,
			"purpose": [
				"debug-test"
			],
			"env": {
				"_PYTEST_RAISE": "1"
			}
		}
	]
}
